{
    "env": {
        "browser": false,
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["dist"],
    "rules": {
        "indent": "off",
        "multiline-ternary": ["off"],
        "no-tabs": "off",
        "no-unused-vars": "off",
        "semi": ["warn", "always"],
        "space-before-function-paren": "off",
        "quotes": "off",
        "quote-props": ["warn", "consistent"],
        "no-useless-constructor": "off"
    }
}
