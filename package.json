{
    "name": "the-crew-slap-bot",
    "version": "1.0.0",
    "description": "A slack bot for The Crew",
    "main": "app.js",
    "scripts": {
        "build": "tsc",
        "compile": "tsc",
        "develop": "nodemon",
        "env": "ncp template.env .env",
        "lint-fix": "eslint ./src/** --fix",
        "lint": "eslint ./src/**",
        "spec:once": "ts-mocha ./src/**/*.spec.ts",
        "spec": "ts-mocha  \"src/**/*.spec.ts\" -w --watch-extensions ts",
        "start": "ts-node ./src/app.ts",
        "test": "ts-mocha ./src/**/*.spec.ts"
    },
    "keywords": [
        "slack"
    ],
    "author": "Chris Moscoso",
    "license": "ISC",
    "dependencies": {
        "@slack/bolt": "^3.11.0",
        "dotenv": "^16.0.0",
        "fastify": "^3.27.4"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "chai": "^4.3.6",
        "eslint": "^8.12.0",
        "mocha": "^9.2.2",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.15",
        "rxjs": "^7.5.5",
        "ts-mocha": "^9.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}
